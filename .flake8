[flake8]
filename = *.py, *.pyx, *.pxd
ignore = E251,E702,E203,E266,E501,W503,F403, F401, W504,W503
per-file-ignores =
    synthetic-exchange/**/*.pyx: E225,E226,E251,E999
    synthetic-exchange/**/*.pxd: E225,E226,E251,E999
    test/**/*.pyx: E225,E226,E251,E999
    test/**/*.pxd: E225,E226,E251,E999
max-line-length = 120
max-complexity = 18
select = B,C,E,F,W,T4,B9
